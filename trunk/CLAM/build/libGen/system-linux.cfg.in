SEARCH_RECURSE_INCLUDES = \
	$(COMMON_SEARCH_RECURSE_INCLUDES) \

SEARCH_INCLUDES = @include_dirs@

LIBRARY_PATHS = @lib_dirs@

LIBRARIES_DEBUG = @libs@

LIBRARIES_RELEASE = @libs@

DEFINES = \
	HAVE_STANDARD_SSTREAM \
	HAVE_STANDARD_SSTREAM_STR \
	CLAM_HAVE_PTHREADS \
	HAVE_STANDARD_UNICODE \
	$(COMMON_DEFINES) \

#$(ENABLED_RTAUDIO?__LINUX_ALSA__) 

PROGRAM = $(IS_LIBRARY?lib$(PROGRAM).so:$(PROGRAM))

EXTRA_MAKEFILE_VARS = PROGRAM LIBRARY

INCLUDE_FLAGS_COMMON = 

CXXFLAGS_DEBUG = -g -fno-inline -pipe -D_DEBUG $(INCLUDE_FLAGS_COMMON)
CXXFLAGS_RELEASE = -O3 -fomit-frame-pointer -pipe $(INCLUDE_FLAGS_COMMON)

LINK_FLAGS_COMMON = 

LINK_FLAGS_DEBUG = $(IS_LIBRARY?-shared) $(LINK_FLAGS_COMMON) -rdynamic
LINK_FLAGS_RELEASE = $(IS_LIBRARY?-shared) $(LINK_FLAGS_COMMON)


