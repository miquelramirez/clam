#####################################################################
# Check if $$feature is going to be used
#
# source: $$filename 
#####################################################################
AC_MSG_CHECKING([$$feature package specified])
#
AC_SUBST( USING_$$uc_feature_esc )
AC_ARG_WITH(
	[$$feature],AC_HELP_STRING([--with-$$feature],
	[use $$feature (default is $$default)]),[
	if test x$enableval = xyes
	then
		AC_MSG_RESULT([yes])
	enabled_$$feature_esc=yes
	found_$$feature_esc=no
	USING_$$uc_feature_esc=1
	else
		AC_MSG_RESULT([no])
	enabled_$$feature_esc=no
	USING_$$uc_feature_esc=0
	found_$$feature_esc=yes
	fi
],[
	AC_MSG_RESULT([$$default (default)])
	enabled_$$feature_esc=$$default
	if test x$$default = xyes
	then
		USING_$$uc_feature_esc=1
	else
		USING_$$uc_feature_esc=0
	fi
	found_$$feature_esc=no
])
#####################################################################

