#####################################################################
# Check if $$feature is enabled
#
# source: $$filename 
#####################################################################
AC_MSG_CHECKING([$$feature enabled])
#
AC_SUBST( ENABLED_$$uc_feature_esc )
AC_ARG_ENABLE(
	[$$feature],AC_HELP_STRING([--enable-$$feature],
	[use $$feature (default is $$default)]),[
	if test x$enableval = xyes
	then
		AC_MSG_RESULT([yes])
		enabled_$$feature_esc=yes
		found_$$feature_esc=no
		ENABLED_$$uc_feature_esc=1
		PACKAGE_DEFINES="$PACKAGE_DEFINES $$effectsEnabled"
	else
		AC_MSG_RESULT([no])
		enabled_$$feature_esc=no
		ENABLED_$$uc_feature_esc=0
		PACKAGE_DEFINES="$PACKAGE_DEFINES $$effectsDisabled"
		found_$$feature_esc=yes
	fi
],[
	AC_MSG_RESULT([$$default (default)])
	enabled_$$feature_esc=$$default
	if test x$$default = xyes
	then
		ENABLED_$$uc_feature_esc=1
		PACKAGE_DEFINES="$PACKAGE_DEFINES $$effectsEnabled"
	else
		ENABLED_$$uc_feature_esc=0
		PACKAGE_DEFINES="$PACKAGE_DEFINES $$effectsDisabled"
	fi
	found_$$feature_esc=no
])
#####################################################################

