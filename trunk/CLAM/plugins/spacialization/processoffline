#!/usr/bin/python

import os

def run(command) :
	print "\033[32m:: ", command, "\033[0m"
	return os.system(command)
	for line in os.popen(command) :
		print line,
		sys.stdout.flush()
def norun(command) :
	print "\033[31mXX ", command, "\033[0m"


examples = [
	('realitzacio_centered', 'db4'),
	('explorer2', 'db4'), # db4: source centered
	('explorer3', 'db4'),
	('realitzacio1', 'db7/source3'),
	('realitzacio2', 'db7/source3'),
	('realitzacio2', 'db9/source0'),
	('realitzacio2', 'db11/source0', 'wavs/flamenco_guitar.wav'),
	('realitzacio2', 'db11/source1', 'wavs/flamenco_voz.wav'),
	('realitzacio2', 'db11/source2', 'wavs/flamenco_cajon_inspirado.wav'),
	('realitzacio2', 'db11/source3', 'wavs/flamenco_bailaora_inspirada.wav'),
]
examples = [
	('realitzacio2', 'db15/source0', 'wavs/flamenco_guitar.wav'),
	('explorer3', 'db15/source0', 'wavs/flamenco_guitar.wav'),
]

for realization_name, db, inputwav in examples:
	vars = {
		'pathfile': 'realitzacions/%s.data'%realization_name,
		'outdir': 'renderedfiles/%s'%realization_name, 
		'db': db,
		'realization_name': realization_name,
		'inputwav': inputwav
	}
	print vars
	run("rm -rf %(outdir)s" % vars)
	run("mkdir -p %(outdir)s/stereo" % vars)
	run("rm -f current_path.data && ln -s %(pathfile)s current_path.data" % vars)
	run("rm -f db && ln -s %(db)s db" % vars)

	#process
	cmd = "./OfflinePlayer sequenced_networks/offline1_surround.clamnetwork %(inputwav)s %(outdir)s/C.wav %(outdir)s/L.wav %(outdir)s/R.wav %(outdir)s/SL.wav %(outdir)s/SR.wav" % vars
	norun(cmd) 
	cmd_stereo = "./OfflinePlayer sequenced_networks/offline1.clamnetwork %(inputwav)s %(outdir)s/stereo/L.wav %(outdir)s/stereo/R.wav" % vars
	run(cmd_stereo)
	#zip
	norun("cd %(outdir)s/.. && zip -r %(realization_name)s.zip %(realization_name)s/" % vars ) #zip
	
	# encode surround ac3 file
	norun("cd %(outdir)s && sox -M L.wav R.wav C.wav SL.wav SR.wav surround.wav" % vars)
	norun("cd %(outdir)s && aften -b 448 -cmix 0 -smix 0 -dsur 2 -acmod 7 surround.wav surround.ac3" % vars)
	# encode stereo file
	run("cd %(outdir)s/stereo && sox -M L.wav R.wav stereo.wav" % vars)

	# encode avi surround
	run("mencoder -ovc copy realitzacions/%(realization_name)s_22fps.avi -audiofile %(outdir)s/surround.ac3 -oac copy -o %(outdir)s/%(realization_name)s_ac3.avi" % vars)

	# encode avi stereo
	run("mencoder -ovc copy realitzacions/%(realization_name)s_22fps.avi -audiofile %(outdir)s/stereo/stereo.wav -oac copy -o %(outdir)s/%(realization_name)s_hrtf_stereo.avi" % vars)
