#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1




CFLAGS = -Wall -g
OPTIONS=prefix=/usr xmlbackend=xercesc release=yes

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -O2
endif
ifeq (,$(findstring nostrip,$(DEB_BUILD_OPTIONS)))
	INSTALL_PROGRAM += -s
endif

# shared library versions, option 1
version=2.0.5
major=2
# option 2, assuming the library is created as src/.libs/libfoo.so.2.0.5 or so
#version=`ls src/.libs/lib*.so.* | \
# awk '{if (match($$0,/[0-9]+\.[0-9]+\.[0-9]+$$/)) print substr($$0,RSTART)}'`
#major=`ls src/.libs/lib*.so.* | \
# awk '{if (match($$0,/\.so\.[0-9]+$$/)) print substr($$0,RSTART+4)}'`

configure: configure-stamp
configure-stamp:
	dh_testdir
	# Add here commands to configure the package.

	touch configure-stamp


build: build-stamp
build-stamp: configure-stamp 
	dh_testdir

	# Add here commands to compile the package.
	$(MAKE) -C $(CURDIR)/scons/libs build-core
	$(MAKE) -C $(CURDIR)/scons/libs build-processing
	$(MAKE) -C $(CURDIR)/scons/libs build-audioio
	$(MAKE) -C $(CURDIR)/scons/libs build-vmfl
	$(MAKE) -C $(CURDIR)/scons/libs build-vmqt
	#cd $(CURDIR)/scons/libs && scons $(OPTIONS) core
	# First, tarballize the examples folder
	tar zcvf examples.tar.gz examples
	# and now doxygenate CLAM stuff
	doxygen $(CURDIR)/doxygen.cfg
	# tarballize dox
	tar zcvf clam-doxydocs.tar.gz doxygen

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	# Add here commands to clean up after the build process.
	rm -rf $(CURDIR)/scons/libs/*.conf
	-$(MAKE) -C $(CURDIR)/scons/libs clean

	find $(CURDIR) -name .*sconf_temp* | xargs rm -rf
	find $(CURDIR) -type f -name *.pyc | xargs rm -rf
	find $(CURDIR) -type f -name *.o | xargs rm -rf
	find $(CURDIR) -type f -name *.os | xargs rm -rf
	find $(CURDIR) -type f -name *.a | xargs rm -rf
	find $(CURDIR) -type f -name .*.swp | xargs rm -rf
	find $(CURDIR) -type f -name .sconsign | xargs rm -rf
	find $(CURDIR) -type f -name *.db | xargs rm -rf
	rm -rf $(CURDIR)/scons/libs/*.conf
	rm -rf $(CURDIR)/debian/libclamcore1/usr
	rm -rf $(CURDIR)/debian/libclamcore1-dev/usr
	rm -rf $(CURDIR)/debian/libclamprocessing1/usr
	rm -rf $(CURDIR)/debian/libclamprocessing1-dev/usr
	rm -rf $(CURDIR)/debian/libclamaudioio1/usr
	rm -rf $(CURDIR)/debian/libclamaudioio1-dev/usr
	rm -rf $(CURDIR)/debian/libclamvmfl1/usr
	rm -rf $(CURDIR)/debian/libclamvmfl1-dev/usr
	rm -rf $(CURDIR)/debian/libclamvmqt1/usr
	rm -rf $(CURDIR)/debian/libclamvmqt1-dev/usr
	rm -rf $(CURDIR)/CLAM.tag
	rm -rf $(CURDIR)/*.tar.gz

	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs

	# Add here commands to install the package into debian/tmp
	mkdir -p $(CURDIR)/debian/libclamcore1/usr
	mkdir -p $(CURDIR)/debian/libclamcore1-dev/usr
	mkdir -p $(CURDIR)/debian/libclamprocessing1/usr
	mkdir -p $(CURDIR)/debian/libclamprocessing1-dev/usr
	mkdir -p $(CURDIR)/debian/libclamaudioio1/usr
	mkdir -p $(CURDIR)/debian/libclamaudioio1-dev/usr
	mkdir -p $(CURDIR)/debian/libclamvmfl1/usr
	mkdir -p $(CURDIR)/debian/libclamvmfl1-dev/usr
	mkdir -p $(CURDIR)/debian/libclamvmqt1/usr
	mkdir -p $(CURDIR)/debian/libclamvmqt1-dev/usr
	#cd $(CURDIR)/scons/libs && scons install_prefix=$(DESTDIR) install_core
	$(MAKE) -C $(CURDIR)/scons/libs install-core-runtime DESTDIR=$(CURDIR)/debian/libclamcore1
	$(MAKE) -C $(CURDIR)/scons/libs install-core-dev DESTDIR=$(CURDIR)/debian/libclamcore1-dev
	rm -rf $(CURDIR)/debian/libclamcore1/usr/lib/*.so
	rm -rf $(CURDIR)/debian/libclamcore1-dev/usr/lib/*.so.*
	$(MAKE) -C $(CURDIR)/scons/libs install-processing-runtime DESTDIR=$(CURDIR)/debian/libclamprocessing1
	$(MAKE) -C $(CURDIR)/scons/libs install-processing-dev DESTDIR=$(CURDIR)/debian/libclamprocessing1-dev
	rm -rf $(CURDIR)/debian/libclamprocessing1/usr/lib/*.so
	rm -rf $(CURDIR)/debian/libclamprocessing1-dev/usr/lib/*.so.*
	$(MAKE) -C $(CURDIR)/scons/libs install-audioio-runtime DESTDIR=$(CURDIR)/debian/libclamaudioio1
	$(MAKE) -C $(CURDIR)/scons/libs install-audioio-dev DESTDIR=$(CURDIR)/debian/libclamaudioio1-dev
	rm -rf $(CURDIR)/debian/libclamaudioio1/usr/lib/*.so
	rm -rf $(CURDIR)/debian/libclamaudioio1-dev/usr/lib/*.so.*
	$(MAKE) -C $(CURDIR)/scons/libs install-vmfl-runtime DESTDIR=$(CURDIR)/debian/libclamvmfl1
	$(MAKE) -C $(CURDIR)/scons/libs install-vmfl-dev DESTDIR=$(CURDIR)/debian/libclamvmfl1-dev
	rm -rf $(CURDIR)/debian/libclamvmfl1/usr/lib/*.so
	rm -rf $(CURDIR)/debian/libclamvmfl1-dev/usr/lib/*.so.*
	$(MAKE) -C $(CURDIR)/scons/libs install-vmqt-runtime DESTDIR=$(CURDIR)/debian/libclamvmqt1
	$(MAKE) -C $(CURDIR)/scons/libs install-vmqt-dev DESTDIR=$(CURDIR)/debian/libclamvmqt1-dev
	rm -rf $(CURDIR)/debian/libclamvmqt1/usr/lib/*.so
	rm -rf $(CURDIR)/debian/libclamvmqt1-dev/usr/lib/*.so.*
	find $(CURDIR)/debian -type f -name .sconsign | xargs rm -rf
	# and copy it to the libclam-doc folder
	mkdir -p $(CURDIR)/debian/libclam-doc/usr/share/doc/libclam-doc
	cp clam-doxydocs.tar.gz $(CURDIR)/debian/libclam-doc/usr/share/doc/libclam-doc
	# and copy it to the libclam-doc folder
	cp examples.tar.gz $(CURDIR)/debian/libclam-doc/usr/share/doc/libclam-doc


# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs ChangeLog.txt
	dh_installdocs
	dh_installexamples
#	dh_install
#	dh_installmenu
#	dh_installdebconf	
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
#	dh_perl
#	dh_python
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps -L libclamcore1 -l debian/libclamcore1/usr/lib
	dh_shlibdeps -L libclamprocessing1 -l debian/libclamprocessing1/usr/lib
	dh_shlibdeps -L libclamaudioio1 -l debian/libclamaudioio1/usr/lib
	dh_shlibdeps -L libclamvmfl1 -l debian/libclamvmfl1/usr/lib
	dh_shlibdeps -L libclamvmqt1 -l debian/libclamvmqt1/usr/lib
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
