TOP=../..

SOURCES = $(shell ls *.cxx)
MODULES = $(SOURCES:%.cxx=%.o)

include $(TOP)/unix_tools/make.rules

clam_su_wrapper: clam_su_wrapper.c clam_su_wrapper.h
	@echo "Installing the clam_su_wrapper."
	@echo "You will be asked for a root password twice.";
	@echo "Don't forget to add the full pathnames of the applications you"
	@echo "wish to execute with clam_su_wrapper to /etc/wrapper/trusted";
	@cp clam_su_wrapper.c /tmp/
	@su -c "g++ /tmp/clam_su_wrapper.c -o /usr/bin/clam_su_wrapper"
	@su -c "chmod 4755 /usr/bin/clam_su_wrapper"
	@rm /tmp/clam_su_wrapper.c
